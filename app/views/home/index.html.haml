- content_for :latest_project do
  .latest_project{:onload => {}}
    .project
      - @slider.pictures.each_with_index do |picture, index|
        - classname = index == 0 ? "tabb displayslide" : "tabb displaynone"
        = render :partial => 'slide', :locals => {:picture => picture, :index => index, :classname => classname} 
- content_for :sec_menu do
  :javascript
    var slideTimeout = 5000;   
    var maxslidernumber = 3;
  .sec_menu
    .sec_menu_content
      .previous_button
        = link_to '', 'javascript:void(0);', :onclick => 'prevSlide();', :class => 'previous'
      .tabbicos.float_left
        %ul.project_bubles
          %li
            = link_to '', 'javascript:void(0);', :onclick => 'changeSlide2this(1);', :id => 'slide-tab1', :class => 'active'  
        %div{:style => "clear:both;"}
      .next_button{:style => "width:71px"}
        = link_to '', 'javascript:void(0);', :onclick => 'nextSlide();', :class => 'next'
      .clear_container     
- content_for :content do
  .content_home
    .content_left
      #recent-posts-4.panel.widget.widget_recent_entries
        %h2= t('.News')
        .line
        %ul
          - @articles.each do |article|
            %li
              = link_to article.title.capitalize, article_path(article)  
    .content_middle
      = render :partial => 'shared/blog_right'
    .content_right
      #text-3.panel.plast.widget.widget_text
        %h2= t('.sign in hint')
        .line
        .textwidget
          = link_to t('.sign in'), '/lolita'
    .clear_container


