= javascript_include_tag "tabsslider.js"

- content_for :latest_project do
  .latest_project{:onload => {}}
    .project
      - @slider.pictures.each_with_index do |picture, index|
        - classname = index == 0 ? "tabb displayslide" : "tabb displaynone"
        = render :partial => 'slide', :locals => {:picture => picture, :index => index, :classname => classname} 
- content_for :sec_menu do
  :javascript
    var slideTimeout = 5000;   
    var maxslidernumber = 3;
  .sec_menu
    .sec_menu_content
      .previous_button
        = link_to '', 'javascript:void(0);', :onclick => 'prevSlide();', :class => 'previous'
      .tabbicos.float_left
        %ul.project_bubles
          %li
            = link_to '', 'javascript:void(0);', :onclick => 'changeSlide2this(1);', :id => 'slide-tab1', :class => 'active'  
        %div{:style => "clear:both;"}
      .next_button{:style => "width:71px"}
        = link_to '', 'javascript:void(0);', :onclick => 'nextSlide();', :class => 'next'
      .clear_container     
- content_for :content do
  .content_home
    .content_left
      #recent-posts-4.panel.widget.widget_recent_entries
        %h2= t('.News')
        .line
        %ul
          - @articles.each do |article|
            %li
              = link_to article.title.capitalize, article_path(article)  
    .content_middle
      #testimonials_manager_widget-2.panel.widget.ww1231
        .services_we_offer
          = image_tag 'testimonials.png', :class => 'newspaper_icon png'
          %h5 Testimonials
          .box
            .box_top
              .box_middle
                .testimonials
                  = image_tag 'cite_icon.png', :height => 19, :width => 21, :class => 'cite_icon png'
                  %cite Bonbon tiramisu cake. Faworki topping faworki cake danish. Fruitcake sweet marshmallow. Bear claw faworki chupa chups croissant apple pie faworki oat cake sugar plum oat cake.
                  %h6.testimonial_name Martins
                  .clear_container
            .box_bottom
        .clear_container
      .content_right
    .content_right
      #text-3.panel.plast.widget.widget_text
        %h2= t('.sign in hint')
        .line
        .textwidget
          = link_to t('.sign in'), '/lolita'
    .clear_container


