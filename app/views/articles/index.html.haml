- content_for :latest_project do
  = render 'shared/latest_project'

.secondary_pages_content
  .blog_left
    %h1
      = link_to t('.News'), articles_path
    %br
    %ul.news_list 
      - @articles.each do |article|
        = render :partial => 'article', :locals => {:article => article} 
        %br
    = paginate @articles     
  = render :partial => 'shared/blog_right'
.clear_container
